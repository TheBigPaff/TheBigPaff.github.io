---
const {title, tags, description, href} = Astro.props;
---
<a href={href} class="block group">
    <div class="bg-gray-100 dark:bg-gray-800 bg-opacity-50 dark:bg-opacity-50 p-4 rounded-lg shadow-md transition transform hover:scale-105 hover:bg-opacity-80 dark:hover:bg-opacity-80">
        <div class="flex flex-wrap gap-2">
            {tags?.map((tag: string) => (
                <span class="bg-blue-500 text-white text-sm px-2 py-1 rounded">{tag}</span>
            ))}
        </div>
        <h3 class="text-xl font-bold group-hover:text-blue-500">{title}</h3>
        <p class="text-gray-500 dark:text-gray-400 mt-2">
            {description}
        </p>
    </div>
</a>
